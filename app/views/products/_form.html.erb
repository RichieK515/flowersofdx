<%= simple_form_for(@product, html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image1_file_size, class: "alert alert-error" %>
  <%= f.full_error :image1_content_type, class: "alert alert-error" %>

  <div class="form-inputs">
    <%= f.input :image1, label: "Upload an image" %>
    <%= f.input :name %>
    <%= f.input :description, as: :text, input_html: { rows: "3" } %>
    <%= f.input :category %>
    <%= f.input :pri_color %>
    <%= f.input :sec_color %>
    <%= f.input :quantity_avail %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
